<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Estilo para imágenes circulares -->
    <style name="CircleImageViewStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Estilo para imágenes circulares con borde -->
    <style name="CircleImageViewWithBorder">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="strokeWidth">3dp</item>
        <item name="strokeColor">@color/white</item>
    </style>

    <!-- Estilo para imágenes redondeadas -->
    <style name="RoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <!-- Estilo para esquinas redondeadas solo en la parte superior -->
    <style name="ShapeAppearanceOverlay.TopRounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/corner_radius_medium</item>
        <item name="cornerSizeTopRight">@dimen/corner_radius_medium</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <!-- Estilo para botones redondeados -->
    <style name="RoundedButton" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.RoundedCorners</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="ShapeAppearanceOverlay.RoundedCorners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/corner_radius_large</item>
    </style>

    <!-- Estilo para chips -->
    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipBackgroundColor">@color/md_theme_surfaceVariant</item>
        <item name="chipStrokeColor">@color/md_theme_outline</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textColor">@color/md_theme_onSurfaceVariant</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <!-- Estilos base de texto -->
    <style name="TextAppearance.MiCasa.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">@dimen/text_size_caption</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="lineHeight">16sp</item>
    </style>

    <style name="TextAppearance.MiCasa.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="lineHeight">20sp</item>
    </style>

    <style name="TextAppearance.MiCasa.Large" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="lineHeight">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.MiCasa.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:letterSpacing">0</item>
        <item name="lineHeight">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.MiCasa.Headline" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">@dimen/text_size_headline</item>
        <item name="android:letterSpacing">0</item>
        <item name="lineHeight">32sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Estilos específicos -->
    <style name="TextAppearance.MiCasa.SectionTitle" parent="TextAppearance.MiCasa.Large">
        <item name="android:layout_marginTop">@dimen/spacing_large</item>
        <item name="android:layout_marginBottom">@dimen/spacing_medium</item>
        <item name="android:layout_marginStart">@dimen/spacing_medium</item>
        <item name="android:layout_marginEnd">@dimen/spacing_medium</item>
    </style>

    <style name="TextAppearance.MiCasa.CardTitle" parent="TextAppearance.MiCasa.Body">
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginTop">@dimen/spacing_small</item>
    </style>

    <style name="TextAppearance.MiCasa.CardDescription" parent="TextAppearance.MiCasa.Caption">
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginTop">@dimen/spacing_xsmall</item>
    </style>

    <style name="TextAppearance.App.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/md_theme_onSurface</item>
    </style>
</resources> 