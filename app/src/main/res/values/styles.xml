<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Estilos para imágenes -->
    <style name="CircleImageViewStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="RoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <!-- Estilo para esquinas redondeadas superiores -->
    <style name="ShapeAppearanceOverlay.TopRounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <!-- Estilo para chips -->
    <style name="Widget.MiCasaApp.Chip" parent="Widget.Material3.Chip.Filter">
        <item name="chipBackgroundColor">@color/md_theme_primaryContainer</item>
        <item name="android:textColor">@color/md_theme_onPrimaryContainer</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="chipMinHeight">32dp</item>
        <item name="chipMinTouchTargetSize">32dp</item>
    </style>

    <!-- Estilos de texto básicos -->
    <style name="TextAppearance.MiCasa.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/md_theme_onSurface</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="TextAppearance.MiCasa.Body" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/md_theme_onSurfaceVariant</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>
</resources> 