<?xml version="1.0" encoding="utf-8"?>
<font-family xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <!-- Regular -->
    <font
        android:font="@font/poppins_regular"
        android:fontStyle="normal"
        android:fontWeight="400"
        app:font="@font/poppins_regular"
        app:fontStyle="normal"
        app:fontWeight="400" />

    <!-- Regular Italic -->
    <font
        android:font="@font/poppins_italic"
        android:fontStyle="italic"
        android:fontWeight="400"
        app:font="@font/poppins_italic"
        app:fontStyle="italic"
        app:fontWeight="400" />

    <!-- Medium -->
    <font
        android:font="@font/poppins_medium"
        android:fontStyle="normal"
        android:fontWeight="500"
        app:font="@font/poppins_medium"
        app:fontStyle="normal"
        app:fontWeight="500" />

    <!-- Medium Italic -->
    <font
        android:font="@font/poppins_medium_italic"
        android:fontStyle="italic"
        android:fontWeight="500"
        app:font="@font/poppins_medium_italic"
        app:fontStyle="italic"
        app:fontWeight="500" />

    <!-- Semi Bold -->
    <font
        android:font="@font/poppins_semi_bold"
        android:fontStyle="normal"
        android:fontWeight="600"
        app:font="@font/poppins_semi_bold"
        app:fontStyle="normal"
        app:fontWeight="600" />

    <!-- Semi Bold Italic -->
    <font
        android:font="@font/poppins_semi_bold_italic"
        android:fontStyle="italic"
        android:fontWeight="600"
        app:font="@font/poppins_semi_bold_italic"
        app:fontStyle="italic"
        app:fontWeight="600" />

    <!-- Bold -->
    <font
        android:font="@font/poppins_bold"
        android:fontStyle="normal"
        android:fontWeight="700"
        app:font="@font/poppins_bold"
        app:fontStyle="normal"
        app:fontWeight="700" />

    <!-- Bold Italic -->
    <font
        android:font="@font/poppins_bold_italic"
        android:fontStyle="italic"
        android:fontWeight="700"
        app:font="@font/poppins_bold_italic"
        app:fontStyle="italic"
        app:fontWeight="700" />
</font-family> 